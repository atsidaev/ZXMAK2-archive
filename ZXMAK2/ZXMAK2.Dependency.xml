<?xml version="1.0" encoding="utf-8" ?>
<Resolver>
    <Alias Name="IUserQuery" Type="ZXMAK2.Interfaces.IUserQuery, ZXMAK2" />
    <Alias Name="UserQuery" Type="ZXMAK2.WinForms.UserQuery, ZXMAK2.WinForms" />

    <Alias Name="IUserMessage" Type="ZXMAK2.Interfaces.IUserMessage, ZXMAK2" />
    <Alias Name="UserMessage" Type="ZXMAK2.Presentation.UserMessage, ZXMAK2.Presentation" />

    <Alias Name="IViewResolver" Type="ZXMAK2.MVP.Interfaces.IViewResolver, ZXMAK2" />
    <Alias Name="ViewResolver" Type="ZXMAK2.Presentation.ViewResolver, ZXMAK2.Presentation" />

    <Alias Name="ILauncher" Type="ZXMAK2.Interfaces.ILauncher, ZXMAK2" />
    <Alias Name="Launcher" Type="ZXMAK2.Presentation.Launcher, ZXMAK2.Presentation" />

    <!-- main view -->
    <Alias Name="IMainPresenter" Type="ZXMAK2.MVP.Interfaces.IMainPresenter, ZXMAK2" />
    <Alias Name="MainPresenter" Type="ZXMAK2.MVP.MainPresenter, ZXMAK2" />

    <Alias Name="IMainView" Type="ZXMAK2.MVP.Interfaces.IMainView, ZXMAK2" />
    <Alias Name="WinFormMainView" Type="ZXMAK2.WinForms.MainView, ZXMAK2.WinForms" />
    <Alias Name="XnaMainView" Type="ZXMAK2.XNA4.Views.MainView, ZXMAK2.XNA4" />

    <Alias Name="IAboutView" Type="ZXMAK2.Controls.IAboutView, ZXMAK2" />
    <Alias Name="WinFormsAboutView" Type="ZXMAK2.Controls.FormAbout, ZXMAK2" />

    <Alias Name="IKeyboardView" Type="ZXMAK2.Controls.IKeyboardView, ZXMAK2" />
    <Alias Name="WinFormsKeyboardView" Type="ZXMAK2.Controls.FormKeyboardHelp, ZXMAK2" />

    <Alias Name="IDebuggerGeneralView" Type="ZXMAK2.Hardware.General.UI.IDebuggerGeneralView" />
    <Alias Name="WinFormsDebuggerGeneralView" Type="ZXMAK2.Hardware.General.UI.FormCpu, ZXMAK2" />
    
    <Alias Name="IDebuggerSprinterView" Type="ZXMAK2.Hardware.Sprinter.UI.IDebuggerSprinterView" />
    <Alias Name="WinFormsDebuggerSprinterView" Type="ZXMAK2.Hardware.Sprinter.UI.DebugForm, ZXMAK2" />

    <Alias Name="IFddDebugView" Type="ZXMAK2.Controls.Debugger.IFddDebugView" />
    <Alias Name="WinFormsFddDebugView" Type="ZXMAK2.Controls.Debugger.dbgWD1793, ZXMAK2" />

    <Alias Name="IMemoryMapView" Type="ZXMAK2.Controls.Debugger.IMemoryMapView" />
    <Alias Name="WinFormsMemoryMapView" Type="ZXMAK2.Controls.Debugger.FormMemoryMap, ZXMAK2" />

    <Alias Name="ITapeView" Type="ZXMAK2.Controls.ITapeView" />
    <Alias Name="WinFormsTapeView" Type="ZXMAK2.Controls.TapeForm, ZXMAK2" />

    <Alias Name="IDebuggerAdlersView" Type="ZXMAK2.Hardware.Adlers.UI.IDebuggerAdlersView" />
    <Alias Name="WinFormsDebuggerAdlersView" Type="ZXMAK2.Hardware.Adlers.UI.FormCpu, ZXMAK2" />


    <!-- Mapping -->
    <Entry Type="IViewResolver" MapTo="ViewResolver" LifeTime="Singleton">
        <Argument Name="viewTypes" Value="WinForms, XNA" />
    </Entry>
    <Entry Type="ILauncher" MapTo="Launcher" LifeTime="Singleton" />
    <Entry Type="IUserQuery" MapTo="UserQuery" LifeTime="Transient" />
    <Entry Type="IUserMessage" MapTo="UserMessage" LifeTime="Transient" />
    <Entry Type="IMainPresenter" MapTo="MainPresenter" LifeTime="Transient"/>
    <Entry Type="IMainView" MapTo="WinFormMainView" LifeTime="Transient" Name="WinForms"/>
    <Entry Type="IMainView" MapTo="XnaMainView" LifeTime="Transient" Name="XNA"/>

    <Entry Type="IAboutView" MapTo="WinFormsAboutView" Name="WinForms" />
    <Entry Type="IKeyboardView" MapTo="WinFormsKeyboardView" Name="WinForms" />
    <Entry Type="IDebuggerGeneralView" MapTo="WinFormsDebuggerGeneralView" Name="WinForms" />
    <Entry Type="IDebuggerSprinterView" MapTo="WinFormsDebuggerSprinterView" Name="WinForms" />
    <Entry Type="IFddDebugView" MapTo="WinFormsFddDebugView" Name="WinForms" />
    <Entry Type="IMemoryMapView" MapTo="WinFormsMemoryMapView" Name="WinForms" />
    <Entry Type="ITapeView" MapTo="WinFormsTapeView" Name="WinForms" />
    <Entry Type="IDebuggerAdlersView" MapTo="WinFormsDebuggerAdlersView" Name="WinForms" />
</Resolver> 
