<?xml version="1.0" encoding="utf-8" ?>
<Resolver>
    <Alias Name="IUserQuery" Type="ZXMAK2.Interfaces.IUserQuery, ZXMAK2" />
    <Alias Name="UserQuery" Type="ZXMAK2.WinForms.UserQuery, ZXMAK2.WinForms" />

    <Alias Name="IUserMessage" Type="ZXMAK2.Interfaces.IUserMessage, ZXMAK2" />
    <Alias Name="UserMessage" Type="ZXMAK2.Presentation.UserMessage, ZXMAK2.Presentation" />

    <Alias Name="IMainPresenter" Type="ZXMAK2.MVP.Interfaces.IMainPresenter, ZXMAK2" />
    <Alias Name="MainPresenter" Type="ZXMAK2.MVP.MainPresenter, ZXMAK2" />

    <Alias Name="IViewResolver" Type="ZXMAK2.Presentation.Interfaces.IViewResolver, ZXMAK2.Presentation" />
    <Alias Name="ViewResolver" Type="ZXMAK2.Presentation.ViewResolver, ZXMAK2.Presentation" />

    <Alias Name="ILauncher" Type="ZXMAK2.Interfaces.ILauncher, ZXMAK2" />
    <Alias Name="Launcher" Type="ZXMAK2.Presentation.Launcher, ZXMAK2.Presentation" />

    <Alias Name="IMainView" Type="ZXMAK2.MVP.Interfaces.IMainView, ZXMAK2" />
    <Alias Name="WinFormMainView" Type="ZXMAK2.WinForms.MainView, ZXMAK2.WinForms" />
    <Alias Name="XnaMainView" Type="ZXMAK2.XNA4.Views.MainView, ZXMAK2.XNA4" />

    <Entry Type="IViewResolver" MapTo="ViewResolver" LifeTime="Singleton">
        <Argument Name="viewTypes" Value="WinForms, XNA" />
    </Entry>
    <Entry Type="ILauncher" MapTo="Launcher" LifeTime="Singleton" />
    <Entry Type="IUserQuery" MapTo="UserQuery" LifeTime="Transient" />
    <Entry Type="IUserMessage" MapTo="UserMessage" LifeTime="Transient" />
    <Entry Type="IMainPresenter" MapTo="MainPresenter" LifeTime="Transient"/>
    <Entry Type="IMainView" MapTo="WinFormMainView" LifeTime="Transient" Name="WinForms"/>
    <Entry Type="IMainView" MapTo="XnaMainView" LifeTime="Transient" Name="XNA"/>
</Resolver> 
